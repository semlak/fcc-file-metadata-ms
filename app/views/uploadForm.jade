//- information about ajas file uploading from https://codeforgeek.com/2014/11/ajax-file-upload-node-js/

doctype
html( lang="en" )
	head
		title!= title
	body
		.container
			h1= title
			p
				span= "This is a very simple test harness which posts to "
				a(href='/api/uploadFile')= appURL + '/api/uploadFile'
				span= ". You can take a look at look at page source to see how it works. The key name for the post is 'fileToUpload', and the value is just the file you want to upload." 
			p= "Take a look at look at View page source to see how it works."
			.bs-callout.bs-callout-primary
				form(name='upload_form', action='/api/uploadFile', method='post', id='uploadForm', enctype="multipart/form-data")
					div.input
						span.label Choose File
						input(type='file', name='fileToUpload', id='file_selector_button')
					div.actions
						input(type='submit', value='Upload', id='submit_button')
			#status.bs-callout.bs-callout-default= "Select a file to upload"

link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet", type='text/css')
link(href="/css/main.css", rel="stylesheet", type='text/css')
script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js')
script(type='text/javascript', src='/javascript/main.js')